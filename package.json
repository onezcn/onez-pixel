    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "eslint": "8.42.0",
    "postcss": "^8.4.28",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.3.3",
